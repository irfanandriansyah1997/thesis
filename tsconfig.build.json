{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "lib": [
            "ES6",
            "DOM",
            "ES2016",
            "ES2017"
        ],
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "noEmit": true,
        "composite": true,
        "tsBuildInfoFile": "dist/tsbuild.info",
        "outDir": "./",
        "declarationDir": "./lib",
        "noImplicitAny": true
    },
    "exclude": [
        "etc",
        "lib",
        "dist",
        "test",
        "example",
        "node_modules",
        "src/**/test",
        "src/.storybook",
        "src/**/*.spec.ts",
        "rollup.config.js",
        "src/**/*.spec.tsx",
        "src/**/*.stories.tsx"
    ]
}